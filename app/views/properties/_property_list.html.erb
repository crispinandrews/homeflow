    <h5><%= property['postcode']%></h5>
    <% property['photos'].each do |pic|%>
      <%= image_tag("http://mr0.homeflow.co.uk/" + "#{pic}") %>
    <% end %>
    <p>Price: <%= number_to_currency(property['price_value'], :unit => "Â£") %> </p>
    <p>Bedrooms: <%= property['bedrooms']%></p>
    <p>Property Type: <%= property['property_type'].capitalize %></p>
    <p><%= property['lat']%></p>
    <p><%= property['lng']%></p>
